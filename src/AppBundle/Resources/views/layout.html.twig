{# src/AppBundle/Resources/views/layout.html.twig #}
{%  extends '::base.html.twig' %}

{% block navigation %}
    coucou je suis la navigation
{% endblock %}

{%  block body%}
    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            <a href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
            <div>
                {% block fos_index_content %}
                {% endblock fos_index_content %}
                {% block fos_admin_content %}
                {% endblock fos_admin_content %}
            </div>
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
    </div>

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="{{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}

    <div>Ici il y aura pleins d'url pour le panneau de controle</div>

{%  endblock %}

